<h1><%= @task.title %></h1>
<h3><%= @task.details %></h3>

<p><%= @task.completed ? "This task is completed!" : "This task is incomplete!"  %></p>

<%= link_to "Update task", edit_path %>
<br>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
<br>
<%= link_to "Back to list", tasks_path %>
